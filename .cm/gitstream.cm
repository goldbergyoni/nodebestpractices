automations:
  double_review:
    if:
      - {{ files | reject(list=agent_ignore_files) | match(regex='agent\\/') | some }}
    run:
      - action: set-required-approvals@v1
        args:
          approvals: 2

agent_ignore_files:
  - README.md
  - version.txt
  - version_azure_plugin.txt
  - Dockerfile
  - tests
  - .vscode